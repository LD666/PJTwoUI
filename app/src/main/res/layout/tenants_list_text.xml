<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@color/back_color">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:textColor="@color/top_color"
                android:id="@+id/text_view_t_mobile"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="155dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/ten_img"
                android:layout_toRightOf="@+id/ten_img"
                android:gravity="left"
                android:textSize="20dp" />

            <TextView
                android:textColor="@color/top_color"
                android:textSize="20dp"
                android:gravity="left"
                android:id="@+id/text_view_t_address"
                android:layout_width="202dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/ten_img"
                android:layout_toRightOf="@+id/ten_img" />

            <TextView
                android:textColor="@color/top_color"
                android:textSize="20dp"
                android:gravity="left"
                android:id="@+id/text_view_t_email"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/ten_img"
                android:layout_toRightOf="@+id/ten_img" />

            <ImageView
                android:id="@+id/ten_img"
                android:layout_width="163dp"
                android:layout_height="191dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                card_view:srcCompat="@drawable/tt_img" />

            <TextView
                android:textSize="20dp"
                android:gravity="left"
                android:textColor="@color/top_color"
                android:id="@+id/text_view_t_name"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/ten_img"
                android:layout_toRightOf="@+id/ten_img" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
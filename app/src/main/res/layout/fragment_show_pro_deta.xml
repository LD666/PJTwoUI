<?xml version="1.0" encoding="utf-8"?>

<layout
    android:windowSoftInputMode="adjustPan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="removePropertyViewModel"
            type="com.myfirstapplication.pjtwoui.viewmodel.RemoveViewModel" />
    </data>


    <RelativeLayout
        android:id="@+id/landlord_add_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            style="@style/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/top_color"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageButton
                    android:background="@color/colorPrimary"
                    android:layout_height="30dp"
                    android:id="@+id/dt_property_back"
                    style="@style/toolBarsImg" />

                <TextView
                    app:fontFamily="@font/allerta"
                    android:layout_height="90dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="40dp"
                    style="@style/toolBarText"
                    android:textSize="20dp"
                    android:text="@string/pro_di">
                </TextView>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="548dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="54dp"
            android:orientation="vertical"
            android:padding="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F3F8F8"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imageView_pd"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/bl" />


                <TextView
                    android:id="@+id/edit_text_dt_address"
                    style="@style/signUpInEditTextStyle"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/top_color"
                    android:textSize="20dp"
                    app:fontFamily="@font/allerta"></TextView>


                <TextView
                    android:id="@+id/edit_text_dt_city"
                    style="@style/signUpInEditTextStyle"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/top_color"
                    android:textSize="20dp"
                    app:fontFamily="@font/allerta"></TextView>


                <TextView
                    android:id="@+id/edit_text_dt_state"
                    style="@style/signUpInEditTextStyle"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/top_color"
                    android:textSize="20dp"
                    app:fontFamily="@font/allerta"></TextView>


                <TextView
                    android:id="@+id/edit_text_dt_country"
                    style="@style/signUpInEditTextStyle"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/top_color"
                    android:textSize="20dp"
                    app:fontFamily="@font/allerta"></TextView>


                <TextView
                    android:id="@+id/edit_text_dt_status"
                    style="@style/signUpInEditTextStyle"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/top_color"
                    android:textSize="20dp"
                    app:fontFamily="@font/allerta"></TextView>


                <TextView
                    android:id="@+id/edit_text_dt_price"
                    style="@style/signUpInEditTextStyle"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/top_color"
                    android:textSize="20dp"
                    app:fontFamily="@font/allerta"></TextView>


                <TextView
                    android:id="@+id/edit_text_dt_mortage_info"
                    style="@style/signUpInEditTextStyle"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/top_color"
                    android:textSize="20dp"
                    app:fontFamily="@font/allerta"></TextView>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:windowSoftInputMode="adjustPan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/top_color"
        android:orientation="horizontal"
        android:padding="10dp">



        <TextView
            android:layout_marginTop="5dp"
            style="@style/toolBarText"
            android:textSize="20dp"
            android:layout_marginLeft="65dp"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:text="@string/landlord_info"
            app:fontFamily="@font/allerta">
        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="549dp"
        android:background="#6ec6ff"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/text_view_landlord_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/top_color"
                android:textSize="30dp"></TextView>


            <TextView
                android:id="@+id/text_view_landlord_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/top_color"
                android:textSize="30dp"></TextView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_landlord_sign_out"
                style="@style/button"
                android:layout_marginTop="60dp"
                android:text="@string/sign_out"
                app:cornerRadius="20dp"
                app:fontFamily="@font/allerta"></com.google.android.material.button.MaterialButton>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
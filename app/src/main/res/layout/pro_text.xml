<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#6ec6ff">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_view_pro_cn"
                android:layout_width="133dp"
                android:textColor="@color/top_color"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/imageView_pro"
                android:layout_toRightOf="@+id/imageView_pro"
                android:gravity="left"
                android:textSize="15dp" />

            <TextView
                android:textSize="15dp"
                android:gravity="left"
                android:textColor="@color/top_color"
                android:id="@+id/text_view_pro_st"
                android:layout_width="202dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/imageView_pro"
                android:layout_toRightOf="@+id/imageView_pro" />

            <TextView
                android:textSize="15dp"
                android:gravity="left"
                android:textColor="@color/top_color"
                android:id="@+id/text_view_pro_ci"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/imageView_pro"
                android:layout_toRightOf="@+id/imageView_pro" />

            <ImageView
                android:id="@+id/imageView_pro"
                android:layout_width="127dp"
                android:layout_height="102dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="center"
                card_view:srcCompat="@drawable/bl" />

            <TextView
                android:textSize="15dp"
                android:gravity="left"
                android:textColor="@color/top_color"
                android:id="@+id/text_view_pro_add"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/imageView_pro"
                android:layout_toRightOf="@+id/imageView_pro" />

            android:id="@+id/pro_shared"

            <ImageButton
                android:visibility="gone"
                android:background="#FFFFFF"
                android:id="@+id/pro_shared"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignRight="@+id/text_view_pro_add"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:src="@drawable/ic_share_black_24dp"
                android:text="@string/shared"
                app:cornerRadius="20dp">
            </ImageButton>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>



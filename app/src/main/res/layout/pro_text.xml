<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:background="@color/back_color">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        android:layout_margin="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_view_pro_cn"
                android:layout_width="133dp"
                android:textColor="@color/top_color"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="130dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/imageView_pro"
                android:layout_toRightOf="@+id/imageView_pro"
                android:gravity="left"
                android:textSize="20dp" />

            <TextView
                android:textSize="20dp"
                android:gravity="left"
                android:textColor="@color/top_color"
                android:id="@+id/text_view_pro_st"
                android:layout_width="202dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/imageView_pro"
                android:layout_toRightOf="@+id/imageView_pro" />

            <TextView
                android:textSize="20dp"
                android:gravity="left"
                android:textColor="@color/top_color"
                android:id="@+id/text_view_pro_ci"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/imageView_pro"
                android:layout_toRightOf="@+id/imageView_pro" />

            <ImageView
                android:id="@+id/imageView_pro"
                android:layout_width="169dp"
                android:layout_height="213dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                card_view:srcCompat="@drawable/bl" />

            <TextView
                android:textSize="20dp"
                android:gravity="left"
                android:textColor="@color/top_color"
                android:id="@+id/text_view_pro_add"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/imageView_pro"
                android:layout_toRightOf="@+id/imageView_pro" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pro_shared"
                android:visibility="gone"
                style="@style/button"
                android:layout_below="@+id/text_view_pro_cn"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="7dp"
                android:text="@string/shared"
                app:cornerRadius="20dp">
            </com.google.android.material.button.MaterialButton>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>



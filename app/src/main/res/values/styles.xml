<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="toolBarsImg">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:src">@drawable/ic_backspace_black_24dp</item>
    </style>


    <style name="toolBarText">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/stalinist_one</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="signUpInEditTextStyle">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="backgroundTint">@color/top_color</item>
        <item name="android:textColor">@color/top_color</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button">
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/top_color</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="mainImg">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/bg_img</item>
    </style>

    <style name="property_list">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/top_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
